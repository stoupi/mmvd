generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            String    @id
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  image         String?

  // MMVD-specific fields
  firstName     String?
  lastName      String?
  title         String?  // Dr, Prof, or null
  affiliation   String?
  centreId      String?
  permissions   AppPermission[]  @default([])
  isActive      Boolean   @default(true)
  avatarUrl     String?

  sessions      Session[]
  accounts      Account[]

  // MMVD relationships
  centre         Centre?    @relation(fields: [centreId], references: [id])
  proposalsAsPi  Proposal[] @relation("ProposalPi")
  reviews        Review[]
  reviewTopics   MainArea[] @relation("ReviewerTopics")
}

model Session {
  id            String   @id
  expiresAt     DateTime
  token         String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  ipAddress     String?
  userAgent     String?

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id              String  @id
  accountId       String
  providerId      String
  userId          String
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken     String?
  refreshToken    String?
  idToken         String?
  accessTokenExpiresAt    DateTime?
  refreshTokenExpiresAt   DateTime?
  scope           String?
  password        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Verification {
  id            String   @id
  identifier    String
  value         String
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// MMVD Enums
enum AppPermission {
  SUBMISSION
  REVIEWING
  ADMIN
}

enum WindowStatus {
  UPCOMING
  OPEN
  REVIEW
  RESPONSE
  CLOSED
}

enum ProposalStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  PRIORITIZED
}

enum ReviewStatus {
  ASSIGNED
  COMPLETED
}

enum ReviewDecision {
  ACCEPT
  REJECT
  REVISE
}

enum OverlapAssessment {
  NO
  PARTIAL
  MAJOR
}

// MMVD Models
model Centre {
  id           String    @id @default(cuid())
  code         String    @unique  // Centre code: 3 digits (e.g., "001", "019", "220")
  name         String                // Centre name
  address      String?               // Street address
  postalCode   String?               // Postal/ZIP code
  city         String?               // City name
  countryCode  String                // ISO2 country code (e.g., "FR", "GB", "IT")
  latitude     Float?                // For map display
  longitude    Float?                // For map display
  patientCount Int       @default(0) // Number of patients enrolled
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  users       User[]
  proposals   Proposal[]

  @@index([countryCode])
  @@index([code])
}

model SubmissionWindow {
  id                    String        @id @default(cuid())
  name                  String        @unique
  submissionOpenAt      DateTime
  submissionCloseAt     DateTime
  reviewStartAt         DateTime
  reviewDeadlineDefault DateTime
  responseDeadline      DateTime
  nextWindowOpensAt     DateTime?
  status                WindowStatus  @default(UPCOMING)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  proposals             Proposal[]

  @@index([status])
}

model MainArea {
  id          String    @id @default(cuid())
  label       String    @unique
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  proposals   Proposal[]
  reviewers   User[]     @relation("ReviewerTopics")
}

model Proposal {
  id                  String          @id @default(cuid())

  // Basic info
  title               String          // max 25 words
  submissionWindowId  String
  mainAreaId          String
  secondaryTopics     String[]        @default([]) // max 2
  piUserId            String
  centreId            String

  // Scientific background
  scientificBackground String         @db.Text // max 200 words
  literaturePosition   String         @db.Text // unmet need description
  competingWork        Json           // array of {doi, pmid, journal, nPatients}

  // Objectives
  primaryObjective     String         @db.Text // max 50 words
  secondaryObjectives  String[]       @default([]) // max 3, 50 words each

  // Study design
  mainExposure         String         @db.Text // max 50 words
  primaryEndpoint      String         @db.Text // max 50 words
  secondaryEndpoints   String[]       @default([]) // max 3, 50 words each

  // Population
  studyPopulation      String         @db.Text // max 100 words
  inclusionCriteria    String?        @db.Text
  exclusionCriteria    String?        @db.Text

  // Data requirements (checkboxes)
  dataBaseline         Boolean        @default(false)
  dataBiological       Boolean        @default(false)
  dataTTE              Boolean        @default(false)
  dataTOE              Boolean        @default(false)
  dataStressEcho       Boolean        @default(false)
  dataCMR              Boolean        @default(false)
  dataCT               Boolean        @default(false)
  dataRHC              Boolean        @default(false)
  dataHospitalFollowup Boolean        @default(false)
  dataClinicalFollowup Boolean        @default(false)
  dataTTEFollowup      Boolean        @default(false)
  dataCoreLab          Boolean        @default(false)

  // Statistical analysis
  analysisTypes        String[]       @default([]) // checkboxes: logistic, cox, propensity, ml
  analysisDescription  String?        @db.Text // max 50 words
  adjustmentCovariates String?        @db.Text // max 50 words
  subgroupAnalyses     String?        @db.Text // max 50 words

  // Target journals
  targetJournals       String[]       @default([]) // max 3

  status               ProposalStatus @default(DRAFT)

  // Timestamps
  createdAt            DateTime       @default(now())
  submittedAt          DateTime?
  updatedAt            DateTime       @updatedAt

  // Soft delete
  isDeleted            Boolean        @default(false)

  // Relations
  submissionWindow     SubmissionWindow @relation(fields: [submissionWindowId], references: [id])
  mainArea             MainArea         @relation(fields: [mainAreaId], references: [id])
  piUser               User             @relation("ProposalPi", fields: [piUserId], references: [id])
  centre               Centre           @relation(fields: [centreId], references: [id])
  reviews              Review[]

  @@index([submissionWindowId])
  @@index([piUserId])
  @@index([centreId])
  @@index([status])
  @@index([isDeleted])
}

model Review {
  id              String            @id @default(cuid())
  proposalId      String
  reviewerId      String

  // Assignment info
  assignedAt      DateTime          @default(now())
  deadline        DateTime
  completedAt     DateTime?
  status          ReviewStatus      @default(ASSIGNED)
  isLate          Boolean           @default(false)

  // Review content
  decision        ReviewDecision?
  overlap         OverlapAssessment?
  overlapDetails  String?           @db.Text
  commentsForPI   String?           @db.Text
  commentsForAdmin String?          @db.Text

  // Timestamps
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Soft delete
  isDeleted       Boolean           @default(false)

  // Relations
  proposal        Proposal          @relation(fields: [proposalId], references: [id])
  reviewer        User              @relation(fields: [reviewerId], references: [id])

  @@unique([proposalId, reviewerId])
  @@index([reviewerId])
  @@index([status])
  @@index([isDeleted])
}
